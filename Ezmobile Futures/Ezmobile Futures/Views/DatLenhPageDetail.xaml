                                       Grid.Column="0"
                                       Grid.Row="1"
                                       HasShadow="False"
                                       Padding="0"
                                       Margin="10,2,0,0">
                                    <StackLayout Orientation="Horizontal">
                                        <Image Source="tru.png"
                                               HeightRequest="12"
                                               WidthRequest="12"
                                               HorizontalOptions="StartAndExpand"
                                               VerticalOptions="CenterAndExpand"
                                               Margin="10,0,0,0">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding GiamKhoangLoCommand, Mode=TwoWay}" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                        <Entry HorizontalTextAlignment="Center"
                                               Text="{Binding TextKhoangLoBB, Mode=TwoWay}"
                                               Unfocused="UnfocusKhoangLoBB"
                                               x:Name="EntryKhoangLoBB"
                                               TextColor="Black"
                                               WidthRequest="80" />
                                        <Image Source="cong.png"
                                               HeightRequest="12"
                                               WidthRequest="12"
                                               HorizontalOptions="EndAndExpand"
                                               VerticalOptions="CenterAndExpand"
                                               Margin="0,0,10,0">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding TangKhoangLoCommand, Mode=TwoWay}" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                    </StackLayout>
                                </Frame>
                                <Frame BorderColor="Gray"
                                       Grid.Column="1"
                                       Grid.Row="1"
                                       HasShadow="False"
                                       Padding="0"
                                       Margin="0,2,10,0">
                                    <StackLayout Orientation="Horizontal">
                                        <Image Source="tru.png"
                                               HeightRequest="12"
                                               WidthRequest="12"
                                               HorizontalOptions="StartAndExpand"
                                               VerticalOptions="CenterAndExpand"
                                               Margin="10,0,0,0">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding GiamBienTruotBBCommand, Mode=TwoWay}" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                        <Entry HorizontalTextAlignment="Center"
                                               Text="{Binding TextBienTruotBB, Mode=TwoWay}"
                                               Unfocused="UnfocusBienTruotBB"
                                               x:Name="EntryBientruotBB"
                                               TextColor="Black"
                                               WidthRequest="80" />
                                        <Image Source="cong.png"
                                               HeightRequest="12"
                                               WidthRequest="12"
                                               HorizontalOptions="EndAndExpand"
                                               VerticalOptions="CenterAndExpand"
                                               Margin="0,0,10,0">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding TangBienTruotBBCommand, Mode=TwoWay}" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                    </StackLayout>
                                </Frame>
                                <BoxView BackgroundColor="#b3b3b3"
                                         Grid.Column="0"
                                         Grid.Row="3"
                                         Margin="10,0,0,10" />
                                <Label Text="{Binding TextGiaDieuKienBB, Mode=TwoWay}"
                                       TextColor="Black"
                                       FontSize="17"
                                       Grid.Column="0"
                                       Grid.Row="3"
                                       Margin="10,0,10,10"
                                       x:Name="Lbl_GiaDieukienBB"
                                       VerticalOptions="CenterAndExpand"
                                       HorizontalOptions="CenterAndExpand" />
                                <BoxView BackgroundColor="Gray"
                                         Grid.Column="1"
                                         Grid.Row="3"
                                         Margin="0,0,10,10" />
                                <Label Text="{Binding TextGiaDieuChinhBB, Mode=TwoWay}"
                                       TextColor="Black"
                                       FontSize="17"
                                       Grid.Column="1"
                                       Grid.Row="3"
                                       Margin="0,0,10,10"
                                       x:Name="Lbl_GiaDieuChinhBB"
                                       VerticalOptions="CenterAndExpand"
                                       HorizontalOptions="CenterAndExpand" />
                            </Grid>
                        </Frame>
                        <BoxView AbsoluteLayout.LayoutBounds="30,-15,60,30"
                                 AbsoluteLayout.LayoutFlags="None"
                                 BackgroundColor="White" />
                        <Label Text="Cắt lỗ"
                               TextColor="black"
                               FontSize="17"
                               VerticalOptions="CenterAndExpand"
                               HorizontalOptions="StartAndExpand"
                               Grid.Column="0"
                               Margin="10,0,10,0"
                               AbsoluteLayout.LayoutBounds="30,-15,100,30"
                               AbsoluteLayout.LayoutFlags="None" />
                    </AbsoluteLayout>
                </StackLayout>
                <Grid RowDefinitions="*,80"
                      Margin="0,20,0,0"
                      RowSpacing="30">
                    <Label Text="Mật khẩu giao dịch"
                           TextColor="black"
                           FontSize="17"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="StartAndExpand"
                           Grid.Column="0"
                           Margin="5,0,0,0" />
                    <Frame BorderColor="Gray"
                           Grid.Column="1"
                           Grid.Row="0"
                           HasShadow="False"
                           Padding="0"
                           Margin="10,2,5,0">
                        <StackLayout Orientation="Horizontal">
                            <Entry HorizontalTextAlignment="Center"
                                   IsPassword="{Binding IsPassword}"
                                   WidthRequest="180" 
                                   TextColor="Black"
                                   Placeholder="Mật khẩu giao dịch"
                                   x:Name="EntryMatKhau"
                                   Unfocused="UnfocusEntryMatKhau"/>
                            <Image Source="eye.png"
                                   HeightRequest="15"
                                   WidthRequest="15"
                                   HorizontalOptions="EndAndExpand"
                                   VerticalOptions="CenterAndExpand"
                                   Margin="0,0,10,0">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ShowPassCommand}" />
                                </Image.GestureRecognizers>
                            </Image>
                        </StackLayout>
                    </Frame>
                    <Button Text="{Binding TextBtnXacNhan, Mode=TwoWay}"
                            FontSize="20"
                            WidthRequest="220"
                            HeightRequest="60"
                            FontAttributes="Bold"
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            CornerRadius="60"
                            BackgroundColor="{Binding BtnBackgroundPass, Mode=TwoWay}"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand"
                            x:Name="Btn_XacNhan"/>
                </Grid>
                <BoxView BackgroundColor="White"
                         HeightRequest="150" />
            </StackLayout>
        </ScrollView>
        <StackLayout AbsoluteLayout.LayoutBounds="60,0,180,230"
                     AbsoluteLayout.LayoutFlags="None"
                     BackgroundColor="White"
                     IsVisible="{Binding IsShow, Mode=TwoWay}"
                     x:Name="StockCode">
            <Entry x:Name="EntryStock"
                   IsVisible="false"
                   Unfocused="TurnOffShowStock"/>
            <ListView ItemsSource="{Binding ListStockCode, Mode=TwoWay}"
                      x:Name="listStockCode">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Stock}"
                                       TextColor="Black"
                                       VerticalOptions="CenterAndExpand"
                                       Margin="10,0,0,0"
                                       FontSize="22">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Path=BindingContext.StockCodeCommand , Source={x:Reference listStockCode}}"
                                                              CommandParameter="{Binding}" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
  </AbsoluteLayout>
</ContentPage>